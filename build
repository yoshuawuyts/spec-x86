#!/bin/sh

if [ $# -ne 1 ]; then
  echo "usage: build <filename>"
  exit 1
fi

# setup
file="$(basename "$(echo "$1" | cut -f 1 -d '.')")"
mkdir -p target/

# compile to linker + object files
yasm -f elf64 -g dwarf2 -l $file.lst $1
# compile to binary
ld -o target/out $file.o

# cleanup
rm $file.o $file.lst
